@model duandian_test.Models.danwei

@{
    ViewBag.Title = "Edit";
}
<div style="padding-bottom:5px;padding-left:20px;">
    当前位置：| &gt;基本设置 &gt;单位设置  &gt; 单位信息编辑
    <br />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.xuhao)
        <div class="form-group">
            <div class="col-md-1"></div>
            @Html.LabelFor(model => model.shiyongdanwei, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.shiyongdanwei, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.shiyongdanwei, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-1"></div>
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="保存" class="btn btn-default" />
                <button type="button" class="btn btn-primary" onclick="window.location.href = '@Url.Action("Index", "danwei")'">返 回</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
