@model duandian_test.Models.EditUserViewModel

@*<h3>使用者账号刪除</h3>*@


<div style="padding-bottom:5px;padding-left:20px;">
    当前位置：| &gt;参数设置  &gt; 用户管理 &gt; 删除用户
    <br />

</div>

<div class="form-horizontal">
   
    <div class="form-group">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <h3>您确定要删除这个账号吗？</h3>
        </div>
        <div class="col-md-4"></div>
    </div>


    <hr />
    
    <div class="form-group">
        <div class="col-md-1"></div>
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-1"></div>
        @Html.LabelFor(model => model.role, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.role, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-1"></div>
        @Html.LabelFor(model => model.keshi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.keshi, new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.keshi, "", new { @class = "text-danger" })
        </div>
    </div>

    
    <div class="form-group   has-error">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <button type="submit" class="btn btn-primary">删除</button>
                    <button type="button" class="btn btn-primary" onclick="window.location.href = '@Url.Action("Index", "Account")'">返 回</button>
                </div>
            }
        </div>
        <div class="col-md-5"></div>
    </div>


</div>

